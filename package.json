{
  "name": "discord-bot",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/index.js",
    "dev": "dotenv -e .env -c -- sh -c 'docker compose -f compose.yml -f compose.local.yml up -d db && npx prisma generate && npx prisma migrate dev && nodemon --exec ts-node ./src/index.ts'",
    "worker": "tsc && pm2 start dist/index.js --no-daemon",
    "heroku-postbuild": "npm install pm2 --save",
    "db:migrate": "dotenv -e .env -c npx prisma migrate dev",
    "db:generate": "dotenv -e .env -c npx prisma generate",
    "db:studio": "dotenv -e .env -c npx prisma studio",
    "db:migrate-reset": "dotenv -e .env -c npx prisma migrate reset",
    "test": "jest",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@types/express": "^5.0.0",
    "bcryptjs": "^3.0.2",
    "discord-api-types": "^0.37.111",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.16",
    "nodemon": "^3.1.9",
    "pm2": "^5.4.3",
    "prisma": "^6.4.1",
    "telegraf": "^4.16.3",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.26.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "prisma-dbml-generator": "^0.12.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.7",
    "typescript-eslint": "^8.18.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "npx prettier --write"
    ]
  },
  "prisma": {
    "schema": "src/infrastructure/persistence/prisma/models/schema.prisma"
  }
}
