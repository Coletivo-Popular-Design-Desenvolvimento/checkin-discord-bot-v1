{
  "compilerOptions": {
    "types": ["@types/jest", "@quramy/jest-prisma"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "paths": {
      "@application/*": ["application/*"],
      "@contexts/*": ["contexts/*"],
      "@domain/*": ["domain/*"],
      "@dtos/*": ["domain/dtos/*"],
      "@entities/*": ["domain/entities/*"],
      "@interfaces/*": ["domain/interfaces/*"],
      "@repositories/*": ["domain/interfaces/repositories/*"],
      "@services/*": ["domain/interfaces/services/*"],
      "@useCases/*": ["domain/useCases/*"],
      "@type/*": ["domain/types/*"],
      "@infra/repositories/*": ["infrastructure/persistence/repositories/*"],
      "@infra/*": ["infrastructure/*"],
      "@discord/*": ["infrastructure/discord/*"],
      "@tests/*": ["tests/*"]
    },
    "baseUrl": "./src"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "files": true
  },
  "lib": ["es2015"],
  "include": ["src/**/**/*"],
  "exclude": ["node_modules", "dist"]
}
